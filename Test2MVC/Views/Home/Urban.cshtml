@{
    ViewBag.Title = "Urban";
}

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: Arial;
    }

    .header {
        text-align: center;
        padding: 32px;
    }
    /* Create two equal columns that floats next to each other */
    .column {
        float: left;
        width: 50%;
        padding: 10px;
    }

        .column img {
            margin-top: 12px;
        }
    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>

<body>
    <h2>@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>

    <div class="row">
        <div class="column">
            <img src="~/images/urban1.jpeg" style="width:100%">
            <img src="~/images/urban2.jpeg" style="width:100%" />
            <img src="~/images/urban3.jpg" style="width:100%">
            <img src="~/images/urban4.jpg" style="width:100%">
            <img src="~/images/urban5.jpg" style="width:100%">
            <img src="~/images/urban6.jpg" style="width:100%">
        </div>
        <div class="column">
            <img src="~/images/urban7.jpg" style="width:100%">
            <img src="~/images/urban8.jpg" style="width:100%">
            <img src="~/images/urban9.jpg" style="width:100%">
            <img src="~/images/urban10.jpg" style="width:100%">
            <img src="~/images/urban11.jpg" style="width:100%">
        </div>
    </div>
</body>